{
  "realm": "$(env:KCA_KC_REALM_NAME)",
  "enabled": true,
  "accessTokenLifespan": 3600,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "clients": [
    {
      "clientId": "$(env:KCA_KC_CLIENT_ID)",
      "enabled": true,
      "secret": "$(env:KCA_KC_CLIENT_SECRET)",
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "publicClient": false,
      "protocol": "openid-connect",
      "rootUrl": "http://localhost:$(env:KCA_OPENRESTY_HOST_PORT)",
      "baseUrl": "http://localhost:$(env:KCA_OPENRESTY_HOST_PORT)",
      "redirectUris": [
        "http://localhost:$(env:KCA_OPENRESTY_HOST_PORT)/.cdn-auth/callback/*"
      ],
      "protocolMappers": [
        {
          "name": "cloudfront-auth-config",
          "protocol": "openid-connect",
          "protocolMapper": "fr.julm.keycloak.providers.auth.cloudfront.CloudFrontAuthConfigMapper",
          "consentRequired": false,
          "config": {
            "access.token.claim": "true",
            "id.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "roles": {
    "client": {
      "cloudfront-test-client": [
        {
          "name": "cloudfront-access",
          "description": "Access role for CloudFront resources",
          "composite": false,
          "clientRole": true
        }
      ]
    }
  },
  "users": [
    {
      "username": "user1",
      "enabled": true,
      "email": "user1@example.com",
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "Authorized User",
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ],
      "clientRoles": {
        "cloudfront-test-client": [
          "cloudfront-access"
        ]
      }
    },
    {
      "username": "user2",
      "enabled": true,
      "email": "user2@example.com",
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "Unauthorized User",
      "credentials": [
        {
          "type": "password",
          "value": "password123",
          "temporary": false
        }
      ],
      "clientRoles": {
      }
    }
  ]
}
